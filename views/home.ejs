<% include header %>

<body>
    <div class="container">
        <h4 class="header center">
            Welcome to Meals! (work in title)
        </h4>
        <div class="row-center">
            <h5 class="header">The site that helps you with your groceries!</h5>
        </div>
    </div>
    <div class="row">
        <!--

            Days of the Week

        -->
        <%  let daysOfTheWeek = ["monday","tuesday","wednesday","thursday","friday","saturday","sunday"]          %>

        <%  for (let day of daysOfTheWeek){
                if (data.mealPlan[day]){ %>

                    <!-- Load card with data -->
                    <%- include("card-filled",{data:{ day:day, recipe:data.mealPlan[day]}}) %>

        <%      } else { %>

                    <!-- Load card without data -->
                    <%- include("card-empty",{data:{ day:day }}) %>

        <%
                }
            }
        %>

            
    </div>
    <div class="container">
        <div class="row right">
            <button class="btn waves-effect waves-light">Submit</button>
        </div>
        <br>
        <br>
    </div>
    <br>
    <br>
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-title">Your shopping list: </div>
                        <ul class="collection">
                            <% for (let item of data.groceries){ %>
                                <li class="collection-item"><%= item.name %> : <%= item.quantity %></li>
                            <% } %>
                        </ul>
                        <table class="striped highlight">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let item of data.groceries){ %>
                                <tr>
                                    <th><%= item.name %></th>
                                    <th><%= item.quantity %></th>
                                </tr>
                                
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-action">
                        <a href="#!">Download</a>
                        <a href="#!">Modify</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


<script>
    document.onload = function(){
        console.log("ready");
    }

    function addButton(day){
        // to-do: Load a modal and add the code at the bottom to the "on submit" button

        console.log(day);

        let recipe = "Scrambled Eggs";
        let url = new URL("http://localhost:8000");
        //let mealPlan = <%= data.mealPlan %>;

        let mealPlan = [];

        console.log(mealPlan);
        
        let query = mealPlan.reduce((acc,elem) => {
            if (elem.day == day){
                acc[elem.day] = recipe;
                return acc
            } else if (elem.recipe){
                acc[elem.day] = elem.recipe;
                return acc
            } else {
                return acc   
            }
            
        },{});

        
        url.search = new URLSearchParams(query)

        window.location = url.href;
    }
</script>


