<% include header %>

<body>
    <div class="container">
        <h4 class="header center">
            Welcome to Meals! (work in title)
        </h4>
        <div class="row-center">
            <h5 class="header">The site that helps you with your groceries!</h5>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <%  let daysOfWeek = ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"];
                for(let item of data.mealPlan){
                     %>
            <div class="col s12 m6 l4 xl3">
                <div class="card small">
                    <div class="card-content">
                        <div class="card-title">
                            <% let day = item.day %>
                            <%= (day[0].toUpperCase())+day.substring(1) %>
                        </div>
                        <%= item.recipe.name %>
                    </div>
                    <div class="card-action">
                        <a href="#!">Remove</a>
                    </div>
                </div>
            </div>
            <% } %>
            
        </div>
    </div>
    <div class="container">
        <div class="row right">
            <button class="btn waves-effect waves-light">Submit</button>
        </div>
        <br>
        <br>
    </div>
    <br>
    <br>
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-title">Your shopping list: </div>
                        <ul class="collection">
                            <% for (let item of data.groceries){ %>
                                <li class="collection-item"><%= item.name %> : <%= item.quantity %></li>
                            <% } %>
                        </ul>
                        <table class="striped highlight">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let item of data.groceries){ %>
                                <tr>
                                    <th><%= item.name %></th>
                                    <th><%= item.quantity %></th>
                                </tr>
                                
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-action">
                        <a href="#!">Download</a>
                        <a href="#!">Modify</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

