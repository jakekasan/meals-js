<div class="container">
    <div class="section row">

        <style>

        .arc text {
            font: 10px sans-serif;
            text-anchor:middle;
        }

        .arc path {
            stroke: #fff;
        }
        </style>
        
        <div class="col s8 m8 l8">
            <svg width="300" height="300" data-groceries="<%=JSON.stringify(data)%>" class="col s8"></svg>
        </div>
        <div class="col s4 m4 l4"></div>
        <script src="https://d3js.org/d3.v4.min.js"></script>
        <script>

        var groceries = JSON.parse((document.getElementsByTagName("svg")[0]).dataset.groceries);

        console.log(groceries);

        /*
        
            mealPlan: {
                monday
            }
        
        */

        var data2 = (Object.values(groceries.mealPlan));

        console.log(data2);

        let ingredients = data2.reduce((acc,elem) => {
            return acc.concat(elem.ingredients)
        },[])

        console.log(ingredients);

        let nutrientTypes = ["proteins","fats","carbohydrates"]

        let nutrientData = nutrientTypes.reduce((acc,type) => {
            acc.push({
                amount:ingredients.reduce((acc,elem) => {
                    return acc + elem.nutrition[type]
                },0),
                name:type
            });
            return acc
        },[]);

        console.log(nutrientData);

        var data = [{
            population:2704659,
            age:"<5"
        },
        {
            population:4499890,
            age:"5-13"
        },
        {
            population:2159981,
            age: "14-17"
        },
        {
            population:3853788,
            age: "18-24"
        },
        {
            population:14106543,
            age: "25-44"
        },
        {
            population:8819342,
            age:"45-64"
        },
        {
            population:612463,
            age:"â‰¥65"
        }];


            var svg = d3.select("svg"),
            width = +svg.attr("width"),
            height = +svg.attr("height"),
            radius = Math.min(width,height) / 2,
            g = svg.append("g").attr("transform","translate(" + width / 2 + "," + height / 2 + ")");
        
            var color = d3.scaleOrdinal(["#98abc5","#8a89a6","#7b6888","#6b486b","#a05d56","#d0743c","#ff8c00"]);

            var pie = d3.pie()
                .sort(null)
                .value((d) => d.amount);

            var path = d3.arc()
                .outerRadius(radius - 10)
                .innerRadius(0);

            var label = d3.arc()
                .outerRadius(radius - 40)
                .innerRadius(radius - 40);

            var arc = g.selectAll(".arc")
                .data(pie(nutrientData))
                .enter().append("g")
                    .attr("class","arc");

            arc.append("path")
                .attr("d",path)
                .attr("fill", (d) => {
                    return color(d.data.name);
                });

            arc.append("text")
                .attr("transform", (d) => { return "translate(" + label.centroid(d) + ")"; })
                .attr("dy","0.35em")
                .text((d) => {
                    let name = d.data.name;
                    name[0] = name[0].toUpperCase();
                    return name
                })

        </script>
    </div>
</div>