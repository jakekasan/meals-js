<% include ../header %>

<div class="container">
    <div class="section">
        <div class="row">
            <form action="" method="POST">
                <div class="row section">
                    <div id="nameInputDiv" class="section col s12 l4 input-field">
                        <textarea id="nameInput" class="materialize-textarea" name="name" required></textarea>
                        <label for="nameInput">Name</label>
                    </div>

                    <div id="descriptionInputDiv" class="section col s12 l12 input-field">
                        <textarea id="descriptionInput" class="materialize-textarea" name="description" required></textarea>
                        <label for="descriptionInput">Description</label>
                    </div>
                </div>

                <script>
                    document.addEventListener("load",() => {
                        
                    });
                </script>

                <div id="ingredientsDiv" class="row section">
                    <div id="ingredientsListDiv" class="col s12 l12">
                        <ul class="collection" id="ingredientsList">
                        </ul>
                        <label for="ingredientsList">Ingredients</label>
                    </div>
                    <div id="ingredientsInputDiv" class="col s12 l12">
                        <div id="ingredientsInput" class="row section container">
                            <div class="col s12 l4">
                                <input id="ingredientName" type="text">
                                <label for="ingredientName">Name of ingredient:</label>
                            </div>
                            <div class="col s12 l4">
                                <input id="ingredientAmount" type="text">
                                <label for="ingredientAmount">Amount of ingredient:</label>
                            </div>
                            <div class="col s12 l4">
                                <a id="addIngredient" class="btn">Add Ingredient</a>
                                <!-- <label for="addIngredient">Click to add</label> -->
                            </div>
                        </div>
                    </div>

                    <script src="/js/recipes.js"></script>
                </div>

                <div id="submitDiv" class="section row">
                    <div class="col s12 l12">
                        <p>Check over all the details and hit the submit button!</p>
                    </div>
                    <button id="submitButton" class="btn col s12 l12">Click to Submit!</button>                    
                </div>
               
            </form>
        </div>
    </div>
</div>

<% include ../footer %>